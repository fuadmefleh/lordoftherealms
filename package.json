{
  "name": "lord-of-the-realms",
  "version": "0.3.0",
  "description": "A deep hex-grid strategy game â€” rise from wanderer to ruler through trade, warfare, faith, and diplomacy.",
  "private": true,
  "main": "electron-main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "vite",
    "test": "vitest run",
    "test:watch": "vitest",
    "electron": "electron .",
    "dist": "vite build && electron-builder --win",
    "dist:all": "vite build && electron-builder --win --linux --mac",
    "build:data": "node scripts/build-gamedata.js"
  },
  "keywords": [
    "strategy",
    "hex-grid",
    "game",
    "canvas",
    "react",
    "vite"
  ],
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.4",
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "build": {
    "appId": "com.lordoftherealms.game",
    "productName": "Lord of the Realms",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron-main.js",
      "dist-web/**/*",
      "assets/**/*",
      "data/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerSidebar": null,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Lord of the Realms"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Game"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.games"
    }
  },
  "dependencies": {
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  }
}
